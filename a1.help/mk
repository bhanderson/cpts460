echo compiling ......
as86 -o bs.o bs.s
bcc -c -ansi bc.c

echo linking ......
ld86 -d bs.o bc.o /usr/lib/bcc/libc.a

echo check a.out size ......
ls -l a.out

echo dump a.out to a VIRTUAL FD
dd if=a.out of=fd bs=1024 count=1 conv=notrunc

rm a.out *.o

echo ready to run QEMU on fd?
read ANS

qemu -fda fd -no-fd-bootchk
