echo assembling
as86 -o bs.o  bs.s         # assemble bs.s into bs.o

echo compiling
bcc  -c -ansi bc.c         # compile bc into bc.o

echo linking
ld86 -d bs.o bc.o /usr/lib/bcc/libc.a 
ls -l a.out

echo dump booter to block0
dd if=a.out of=fd bs=1024 count=1   conv=notrunc

echo dump mtx to block 1000
dd if=mtx   of=fd bs=1024 seek=1000 conv=notrunc

rm a.out *.o


echo ready to run QEMU on fd?
read ANS

qemu -fda fd -no-fd-bootchk



